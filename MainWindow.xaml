<Window x:Class="ProductivityTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductivityTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <!-- Timer -->
        <TextBlock x:Name="TimeDisplay"
                   Text="25:00"
                   FontSize="36"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                        Margin="0,0,0,100"/>
        
        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Start" Width="75" Margin="5" Click="StartButton_Click"/>
            <Button Content="Pause" Width="75" Margin="5" Click="PauseButton_Click"/>
            <Button Content="Reset" Width="75" Margin="5" Click="ResetButton_Click"/>

        </StackPanel>

    </Grid>
</Window>
